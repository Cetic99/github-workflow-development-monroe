<Application x:Class="NFC_card_tool.App"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   StartupUri="MainWindow.xaml">
<Application.Resources>
        <!-- Modern Teal/Cyan Color Palette -->
        <!-- Primary Teal (Buttons, accents) -->
   <SolidColorBrush x:Key="PrimaryColor" Color="#0D8472"/>        <!-- Dark Teal -->
      <SolidColorBrush x:Key="PrimaryLight" Color="#2BD6B5"/>       <!-- Light Cyan -->
        <SolidColorBrush x:Key="PrimaryHover" Color="#0A6B5D"/>       <!-- Darker Teal Hover -->
        <SolidColorBrush x:Key="PrimaryPressed" Color="#085548"/>  <!-- Darkest Teal -->
    
        <!-- Backgrounds -->
        <SolidColorBrush x:Key="BackgroundColor" Color="#E8F8F5"/>  <!-- Very Light Cyan -->
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>     <!-- White -->
<SolidColorBrush x:Key="SectionBackground" Color="#D1F2ED"/>  <!-- Light Cyan-Green -->
  
        <!-- Text Colors -->
        <SolidColorBrush x:Key="TextPrimary" Color="#0F3A34"/>      <!-- Dark Teal-Green -->
  <SolidColorBrush x:Key="TextSecondary" Color="#2C6B62"/>      <!-- Medium Teal -->
 <SolidColorBrush x:Key="TextTertiary" Color="#5A9A8F"/> <!-- Light Teal -->
        
      <!-- Accent Colors -->
  <SolidColorBrush x:Key="AccentCyan" Color="#1DE9B6"/>        <!-- Bright Cyan -->
    <SolidColorBrush x:Key="BorderColor" Color="#A5D8CF"/>    <!-- Light Teal Border -->
        
        <!-- Debug/Error Red -->
        <SolidColorBrush x:Key="ErrorRed" Color="#DC3545"/>       <!-- Danger Red -->
        <SolidColorBrush x:Key="ErrorRedHover" Color="#C82333"/>  <!-- Dark Red -->
  
      <!-- Modern Button Style -->
    <Style x:Key="ModernButton" TargetType="Button">
  <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
 <Setter Property="Foreground" Value="White"/>
         <Setter Property="FontSize" Value="15"/>
       <Setter Property="FontWeight" Value="SemiBold"/>
     <Setter Property="Padding" Value="32,12"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Cursor" Value="Hand"/>
<Setter Property="Template">
    <Setter.Value>
            <ControlTemplate TargetType="Button">
  <Border Background="{TemplateBinding Background}" 
   CornerRadius="6"
       Padding="{TemplateBinding Padding}">
   <ContentPresenter HorizontalAlignment="Center" 
           VerticalAlignment="Center"/>
          </Border>
   </ControlTemplate>
   </Setter.Value>
</Setter>
 <Style.Triggers>
  <Trigger Property="IsMouseOver" Value="True">
       <Setter Property="Background" Value="{StaticResource PrimaryHover}"/>
      </Trigger>
        <Trigger Property="IsPressed" Value="True">
      <Setter Property="Background" Value="{StaticResource PrimaryPressed}"/>
       </Trigger>
 <Trigger Property="IsEnabled" Value="False">
   <Setter Property="Opacity" Value="0.6"/>
      </Trigger>
     </Style.Triggers>
        </Style>
  </Application.Resources>
</Application>
