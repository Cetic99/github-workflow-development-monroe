{
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://127.0.0.1:5745"
            }
        }
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Expressions", "Serilog.Sinks.Http" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Logger",
                "Args": {
                    "configureLogger": {
                        "Filter": [
                            {
                                "Name": "ByIncludingOnly",
                                "Args": {
                                    "expression": "StartsWith(SourceContext, 'CashVault.BillAcceptorDriver.ID003')"
                                }
                            }
                        ],
                        "WriteTo": [
                            {
                                "Name": "File",
                                "Args": {
                                    "path": "logs/CashVault.BillAcceptorDriver.ID003.txt",
                                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext} - {Message:lj}{NewLine}{Exception}",
                                    "rollingInterval": "Day",
                                    "retainedFileCountLimit": 30
                                }
                            }
                        ]
                    }
                }
            },
            {
                "Name": "Logger",
                "Args": {
                    "configureLogger": {
                        "Filter": [
                            {
                                "Name": "ByIncludingOnly",
                                "Args": {
                                    "expression": "StartsWith(SourceContext, 'CashVault.BillDispenserDriver.JCM.F53')"
                                }
                            }
                        ],
                        "WriteTo": [
                            {
                                "Name": "File",
                                "Args": {
                                    "path": "logs/CashVault.BillDispenserDriver.JCM.F53.txt",
                                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext} - {Message:lj}{NewLine}{Exception}",
                                    "rollingInterval": "Day",
                                    "retainedFileCountLimit": 30
                                }
                            }
                        ]
                    }
                }
            },
            {
                "Name": "Logger",
                "Args": {
                    "configureLogger": {
                        "Filter": [
                            {
                                "Name": "ByIncludingOnly",
                                "Args": {
                                    "expression": "StartsWith(SourceContext, 'CashVault.TicketPrinterDriver.FutureLogic')"
                                }
                            }
                        ],
                        "WriteTo": [
                            {
                                "Name": "File",
                                "Args": {
                                    "path": "logs/CashVault.TicketPrinterDriver.FutureLogic.txt",
                                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext} - {Message:lj}{NewLine}{Exception}",
                                    "rollingInterval": "Day",
                                    "retainedFileCountLimit": 30
                                }
                            }
                        ]
                    }
                }
            },
            {
                "Name": "Logger",
                "Args": {
                    "configureLogger": {
                        "Filter": [
                            {
                                "Name": "ByIncludingOnly",
                                "Args": {
                                    "expression": "StartsWith(SourceContext, 'CashVault.CabinetControlUnitDriver')"
                                }
                            }
                        ],
                        "WriteTo": [
                            {
                                "Name": "File",
                                "Args": {
                                    "path": "logs/CashVault.CabinetControlUnitDriver.txt",
                                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext} - {Message:lj}{NewLine}{Exception}",
                                    "rollingInterval": "Day",
                                    "retainedFileCountLimit": 30
                                }
                            }
                        ]
                    }
                }
            },
            {
                "Name": "Logger",
                "Args": {
                    "configureLogger": {
                        "Filter": [
                            {
                                "Name": "ByIncludingOnly",
                                "Args": {
                                    "expression": "StartsWith(SourceContext, 'CashVault.Infrastructure.CMSService')"
                                }
                            }
                        ],
                        "WriteTo": [
                            {
                                "Name": "File",
                                "Args": {
                                    "path": "logs/CashVault.Infrastructure.CMSService.txt",
                                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext} - {Message:lj}{NewLine}{Exception}",
                                    "rollingInterval": "Day",
                                    "retainedFileCountLimit": 30
                                }
                            }
                        ]
                    }
                }
            },
            {
                "Name": "Logger",
                "Args": {
                    "configureLogger": {
                        "Filter": [
                            {
                                "Name": "ByExcluding",
                                "Args": {
                                    "expression": "StartsWith(SourceContext, 'CashVault.Infrastructure.CMSService') or StartsWith(SourceContext, 'CashVault.BillAcceptorDriver.ID003') or StartsWith(SourceContext, 'CashVault.BillDispenserDriver.JCM.F53') or StartsWith(SourceContext, 'CashVault.TicketPrinterDriver.FutureLogic') or StartsWith(SourceContext, 'CashVault.CabinetControlUnitDriver')"
                                }
                            }
                        ],
                        "WriteTo": [
                            {
                                "Name": "File",
                                "Args": {
                                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext} - {Message:lj}{NewLine}{Exception}",
                                    "path": "logs/backbone-log.txt",
                                    "rollingInterval": "Day",
                                    "retainedFileCountLimit": 30
                                }
                            }
                        ]
                    }
                }
            },
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext} - {Message:lj}{NewLine}{Exception}"
                }
            }
        ]
    },
    "ConnectionStrings": {
        "CashVaultDatabase": "User=SYSDBA;Password=masterkey;Database=localhost:cashvault;"
    },
    "Heartbeat": {
        "PrivateKeyPath": "Certs/private_key.pem",
        "HashAlgorithm": "SHA-512",
        "SignatureAlgorithm": "RSA"
    },
    "DefaultPassword": "admin",
    "JWT": {
        "AccessTokenValidityInSeconds": 3600,
        "RefreshTokenValidityInSeconds": 3600,
        "Secret": "SecretSecretSecretSecretSecretSecretSecretSecretSecretSecretSecretSecretSecretSecretSecretSecretSecretSecretSecretSecretSecret"
    },
    "AllowedHosts": "*"
}